---
import ProjectShowcase from "@components/ProjectShowcase.astro";
import Layout from "@layouts/Layout.astro";
import Blurb from "@components/Blurb.astro";
import OffsetSign from "@components/OffsetSign.astro";
---

<Layout>
    <div
        class="flex flex-col-reverse justify-center gap-16 pt-10 px-4 lg:px-10 lg:flex-row lg:h-full"
    >
        <OffsetSign hideSmall={false} />
        <ProjectShowcase />
        <div class="flex flex-col">
            <Blurb />
            <OffsetSign hideSmall={true} />
        </div>
    </div>
</Layout>
